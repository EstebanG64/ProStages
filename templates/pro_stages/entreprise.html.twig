{% extends 'base.html.twig' %}


{% block title %}Stages par entreprise{% endblock %}

{% block contenu %}
        {% for stage in entreprise.stages %}
            <div class="row"><!-- ligne 3 contenant les stages -->
                <div class="col-12">
                    <div class="accordion" id="accordionExample">
                        <div class="card">
                            <div class="card-header" id={{ stage.id }}>
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse{{stage.id}}" aria-expanded="false" aria-controls="collapse{{stage.id}}">
                                    {{ stage.titre }}
                                </button>
                            </h2>
                            </div>

                            <div id="collapse{{stage.id}}" class="collapse" aria-labelledby="collapse{{stage.id}}" data-parent="#accordionExample">
                            <div class="card-body">
                                </br>
                                <u><b>Entreprise :</u></b> {{ stage.entreprise.nom }}
                                </br>
                                <u><b>Formation :</u></b> 
                                {% for formationCourante in stage.formations %}
                                    {% if loop.last %}
                                        {{ formationCourante.nom }}.
                                    {% else %}
                                        {{ formationCourante.nom }}, 
                                    {% endif %}
                                {% endfor %}
                                </br>
                                </br>
                                <a class="btn btn-primary" href='{{path('prostages_stages',{id:stage.id})}}' role="button">En savoir plus</a>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

{% endblock %}  